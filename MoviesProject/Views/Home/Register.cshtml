@using MoviesProject.ValueObjects
@using MoviesProject.Resources
@model RegisterViewModel
@{
    Layout = null;
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<style>
    .validation-summary-errors {
        border: 2px dotted #a94442;
        background-color: #d76663;
        border-radius: 8px;
        font-size: 12px;
    }

        .validation-summary-errors ul {
            list-style-type: none;
            padding: 10px;
            color: #fff;
        }
</style>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@lang.signup</title>
    <link href="~/Content/Login.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Content/animate.css" rel="stylesheet" />

    <!-- Icomoon -->
    <link href="~/Content/icomoon.css" rel="stylesheet" />

    <!-- Bootstrap  -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/style.css" rel="stylesheet" />


    <!-- Modernizr JS -->
    <script src="~/Scripts/modernizr-2.6.2.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
</head>
<body id="LoginForm">
    @Html.Partial("_PartialCategories")
    <header id="fh5co-header">

        <div class="container-fluid">
            <div class="row">
                <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>

                <div class="col-lg-12 col-md-12 text-center">

                </div>
            </div>

        </div>
    </header>
    <div class="container">
        @using (Html.BeginForm())
        {
            <div class="login-form">
                <div class="main-div">
                    <div class="panel">
                        <h2>@lang.register</h2>
                        <p>@lang.entermember</p>
                    </div>
                    <form id="Login">
                        @Html.ValidationSummary(false)
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = lang.username })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = lang.password , type = "password" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Repassword, new { @class = "form-control", placeholder = lang.repassword, type = "password" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.EMail, new { @class = "form-control", placeholder = "Email", })
                        </div>

                        <button type="submit" class="btn btn-primary">@lang.register</button>
                    </form>
                </div>
            </div>
        }


    </div>

    <script src="~/Scripts/jquery.min.js"></script>

    <!-- jQuery Easing -->
    <script src="~/Scripts/jquery.easing.1.3.js"></script>

    <!-- Bootstrap -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Waypoints -->
    <script src="~/Scripts/jquery.waypoints.min.js"></script>

    <!-- Main JS -->
    <script src="~/Scripts/main.js"></script>
</body>
</html>
