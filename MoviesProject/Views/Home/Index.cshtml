@using MoviesProject.Database
@using MoviesProject.Resources
@model List<Movies>


@{
    Layout = null;
}


<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@lang.movies</title>

    <!--


    <!-- Animate -->
    <link href="~/Content/animate.css" rel="stylesheet" />

    <!-- Icomoon -->
    <link href="~/Content/icomoon.css" rel="stylesheet" />

    <!-- Bootstrap  -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/style.css" rel="stylesheet" />


    <!-- Modernizr JS -->
    <script src="~/Scripts/modernizr-2.6.2.min.js"></script>


</head>
<body>
    @Html.Partial("_PartialCategories")
    <!-- END #fh5co-offcanvas -->
    <header id="fh5co-header">

        <div class="container-fluid">
            <div class="row">
                <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>

                <div class="col-lg-12 col-md-12 text-center">
                    <h1 id="fh5co-logo"><a href="/Home/Index">Movies</a></h1>
                </div>
            </div>

        </div>
    </header>
    <!-- END #fh5co-header -->
    <div class="container-fluid">
        <div class="row fh5co-post-entry">
         

            @{
                var a = 0;
            }
            @foreach (Movies movie in Model)
            {
                a++;

                <article class="col-lg-3 col-md-3 col-sm-3 col-xs-6 col-xxs-12 animate-box">
                    <figure>
                        <a href="/Home/Detay/@movie.Id"><img src=@movie.SmallImage alt="" class="img-responsive"></a>
                    </figure>
                    <span class="fh5co-meta">@movie.Categories.Title</span>
                    <h2 class="fh5co-article-title"><a href="/Home/Detay/@movie.Id">@movie.Title</a></h2>
                    <span class="fh5co-meta fh5co-date">@movie.ReleaseDate.Value.ToString("dd.MM.yyyy")</span>
                    <p class="fh5co-meta" style="color:#F9AE18">IMDB: @movie.IMDB</p>
                </article>
                if (a % 2 == 0 && a % 4 != 0)
                {
                    <div class="clearfix visible-xs-block"></div>
                }
                if (a % 4 == 0)
                {
                    <div class="clearfix visible-lg-block visible-md-block visible-sm-block visible-xs-block"></div>
                }

            }


        </div>
    </div>
   


    <!-- jQuery -->

    <script src="~/Scripts/jquery.min.js"></script>

    <!-- jQuery Easing -->
    <script src="~/Scripts/jquery.easing.1.3.js"></script>

    <!-- Bootstrap -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Waypoints -->
    <script src="~/Scripts/jquery.waypoints.min.js"></script>

    <!-- Main JS -->
    <script src="~/Scripts/main.js"></script>

</body>
</html>

