@using MoviesProject.Models
@using MoviesProject.Resources
@model DetayModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Detay</title>


    <!-- Animate -->
    <link href="~/Content/animate.css" rel="stylesheet" />

    <!-- Icomoon -->
    <link href="~/Content/icomoon.css" rel="stylesheet" />

    <!-- Bootstrap  -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link rel="stylesheet" href="css/style.css">

    <!-- Modernizr JS -->
    <link href="~/Content/style.css" rel="stylesheet" />

</head>
<body>
    @Html.Partial("_PartialCategories")
    <!-- END #fh5co-offcanvas -->
    <header id="fh5co-header">

        <div class="container-fluid">
            <div class="row">
                <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>

                <div class="col-lg-12 col-md-12 text-center">
                    <h1 id="fh5co-logo"><a href="/Home/Index">Movies</a></h1>
                </div>
            </div>
        </div>
    </header>

    <!-- END #fh5co-header -->
    <div class="container-fluid">
        <div class="row fh5co-post-entry single-entry">
            <article class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 col-xs-offset-0">
                <figure class="animate-box">
                    <img src=@Model.movie.BigImage class="img-responsive" />
                </figure>
                <span class="fh5co-meta animate-box">@Model.movie.Categories.Title</span>
                <h2 class="fh5co-article-title animate-box">@Model.movie.Title</h2>
                <span class="fh5co-meta fh5co-date animate-box">@Model.movie.ReleaseDate.Value.ToString("dd.MM.yyyy")</span>
                <span class="fh5co-meta animate-box" style="color:#F9AE18; font-size:25px;">IMDB: @Model.movie.IMDB</span>

                <div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0 text-left content-article">
                    <div class="row">
                        <div class="col-md-12 animate-box">

                            <p>@Model.movie.Description</p>
                            

                        </div>
                    </div>
                    <h2>@lang.trailer</h2>
                    <div class="wrapper">

                        <iframe src=@Model.movie.YouTubeLink frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>

                    </div>
                    <br />
                    <h2>@lang.comments</h2>
                    <br />
                    @foreach (var item in Model.comments)
                    {

                        <div style="color:orangered" class="pull-right"><p>@lang.commentowner : @item.User.Username</p></div>
                        <br />
                        <p>@item.Text</p>
                        <hr />
                    }
                    @if (CurrentSession.User != null)
                    {
                        using (Html.BeginForm())
                        {
                            <div class="form-group">
                                <label for="comment">@lang.commentowner :</label>
                                <textarea class="form-control" name="eklenen_Yorum" rows="5" id="comment"></textarea>
                                <input type="hidden" name="movieId" value="@Model.movie.Id" />
                            </div>
                            <button type="submit" class="btn btn-success">@lang.send</button>

                        }
                    }





                </div>
            </article>
        </div>
    </div>
    <footer id="fh5co-footer">
        <p><small>&copy; 2016. Magazine Free HTML5. All Rights Reserverd. <br> Designed by <a href="http://freehtml5.co" target="_blank">FREEHTML5.co</a>  Demo Images: <a href="http://unsplash.com/" target="_blank">Unsplash</a></small></p>
    </footer>

    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- jQuery Easing -->
    <script src="~/Scripts/jquery.easing.1.3.js"></script>

    <!-- Bootstrap -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Waypoints -->
    <script src="~/Scripts/jquery.waypoints.min.js"></script>

    <!-- Main JS -->
    <script src="~/Scripts/main.js"></script>

</body>
</html>
